<h1>New Review</h1>

<%= form_for @review do |f| %>

  <!-- when submitting form with nested resources, hidden_field helps its value gets back to the server. -->
  
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>
  <p><%= recipe_id_field(@review) %></p>

  <%= f.submit %>

<% end %>
