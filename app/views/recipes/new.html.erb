<h1>New Recipe</h1>

<%= form_for @recipe do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <h3>Ingredients</h3>

  <%= f.fields_for :ingredients do |i| %>
      <%= i.text_field :name %><br><br>
  <% end %>

  <%= f.submit %>

<% end %>
