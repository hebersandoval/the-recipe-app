<h1>New Recipe</h1>

<%= form_for @recipe do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name, class: "form-control" %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description, class: "form-control", rows:"3" %>

  <h3>Instructions</h3>

  <%= f.fields_for :instructions do |inst| %>
    <%= inst.text_area :content, class: "form-control", rows:"3" %><br>
  <% end %>

  <h3>Categories</h3>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.fields_for :categories, @recipe.categories.build do |categories_fields| %>
    <p>New Categoy: <%= categories_fields.text_field :name, class: "form-control" %></p>
  <% end %>

  <h3>Ingredients</h3>

  <%= f.fields_for :ingredients do |i| %>
      <%= i.text_field :name, class: "form-control" %><br>
  <% end %>

  <%= f.submit class: "btn btn-primary" %>

<% end %>
