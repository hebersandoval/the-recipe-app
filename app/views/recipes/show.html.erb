<h1>Recipe</h1>

<%= link_to "Back", recipes_path %>

<h2><%= @recipe.name %></h2>
<h4><i><%= @recipe.description %></i></h4>

<h3>Instructions</h3>
<% @recipe.instructions.each do |instruction| %>
  <ul>
    <li><%= instruction.content %></li>
  </ul>
<% end %>

<h3>Categories</h3>
<% @recipe.categories.each do |category| %>
  <p><%= category.name %></p>
<% end %>

<h3>Ingredients</h3>

<% @recipe.ingredients.each do |ingredient| %>
  <p><%= ingredient.name %></p>
<% end %>

<!-- find how to add the 'recipe_id' to the reviews below,  because its returning 'nil' -->
<%= link_to "New Review", new_recipe_review_path(@recipe) %>

<h3>Reviews</h3>

<% @recipe.reviews.each do |review| %>
  <p><%= review.content %> | <%= link_to "Edit", edit_recipe_review_path(review.recipe, review) %></p>
<% end %>
